@page "/SignUp"
@using Afiliado.Components

<PageTitle>Sign Up</PageTitle>
<div class="container-fluid m-0 p-0">
	<NavMenu Type="@type" />
	<div class="container margin-top d-flex justify-content-center">
		<div class="row g-0 border">
			<div class="col-md-6">
				<img src="./img/casino_valencia.jpg" class="img-fluid" style="height:100%; object-fit:cover;" alt="...">
			</div>
			<div class="col-md-6 p2 d-flex justify-content-center align-items-center">
				<div class="w-100 p-3">
					<h2 class="card-title text-center">Sign Up</h2>
					<form>
						<div class="row">
							<div class="col-md-6 mb-3">
								<label for="name" class="form-label">Name</label>
								<input type="text" class="form-control" id="name" aria-describedby="emailHelp">
							</div>
							<div class="col-md-6 mb-3">
								<label for="exampleInputEmail1" class="form-label">Last Name</label>
								<input type="text" class="form-control" id="lastName" aria-describedby="emailHelp">
							</div>
						</div>
						<div class="mb-3">
							<label for="exampleInputEmail1" class="form-label">Email address</label>
							<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
						</div>
						<div class="mb-3">
							<label for="exampleInputPassword1" class="form-label">Password</label>
							<input type="password" class="form-control" id="exampleInputPassword1">
						</div>
						<div class="row">
							<div class="col-md-6 mb-3">
								<a href="Dashboard" class="d-flex justify-content-center align-items-center bg-primary-color link-underline link-underline-opacity-0 text-white border p-2 text-center rounded">
									Submit
								</a>
							</div>
							<div class="col-md-6">
								<a class="d-flex justify-content-center align-items-center gray-color text-white border link-underline link-underline-opacity-0 p-2 text-center rounded" href="Login">
									Login
								</a>
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
	<footer class="w-100 bg-primary-color bottom-fixed">
		<div class="container d-flex  align-items-center justify-content-center">
			<p class="p-2">&copy; 2023 Human Learning: Afiliados Cirsa</p>
		</div>
	</footer>
</div>
@code {
	int type = 3;
}
